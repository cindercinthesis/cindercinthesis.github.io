---
import GA from "../components/analytics/GA.astro";
import logoMarkup from "../icons/logo.svg?raw";

export interface Props {
  title: string;
  description: string;
  hidden?: boolean;
}

const { title, description, hidden = false } = Astro.props;
const share_image = "https://res.cloudinary.com/ddsnvfih0/image/upload/v1730050128/social.jpg";

const prod = import.meta.env.PROD;
const dev = import.meta.env.DEV;
---

<!DOCTYPE html>
<html lang="en" class="dark">
  <head>
    <meta charset="UTF-8" />
    <link rel="icon" type="image/svg+xml" sizes="any" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={description} />
    <meta name="robots" content={`${hidden ? "noindex" : "noindex, nofollow"}`} />

    <!-- <link rel="icon" type="image/svg+xml" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 100 100%22><text y=%22.9em%22 font-size=%2290%22>ðŸŒ‰</text></svg>" /> -->
    <!-- <link rel="preload" href="/fonts/subset-OpenSans-Regular.woff2" as="font" type="font/woff2" crossorigin="anonymous" />
    <link rel="preload" href="/fonts/subset-OpenSans-Medium.woff2" as="font" type="font/woff2" crossorigin="anonymous" />
    <link rel="preload" href="/fonts/subset-OpenSans-SemiBold.woff2" as="font" type="font/woff2" crossorigin="anonymous" />
    <link rel="preload" href="/fonts/subset-OpenSans-Bold.woff2" as="font" type="font/woff2" crossorigin="anonymous" />
    <link rel="preload" href="/fonts/subset-OpenSans-ExtraBold.woff2" as="font" type="font/woff2" crossorigin="anonymous" />
    <link rel="preload" href="/fonts/subset-OpenSans-Italic.woff2" as="font" type="font/woff2" crossorigin="anonymous" />
    <link rel="preload" href="/fonts/subset-OpenSans-MediumItalic.woff2" as="font" type="font/woff2" crossorigin="anonymous" /> -->

    <link rel="stylesheet" href="https://use.typekit.net/cwk1pao.css" />

    <title>{title}</title>

    <!-- Open Graph Tags -->
    <meta property="og:title" content={title} />
    <meta property="og:site_name" content="Cindercinthesis" />
    <meta property="og:type" content="website" />
    <meta property="og:locale" content="en_US" />
    <meta property="og:url" content={Astro.url} />
    <meta property="og:description" content={description} />

    <meta property="og:image" content={share_image} />
    <meta property="og:image:url" content={share_image} />
    <meta property="og:image:secure_url" content={share_image} />
    <meta property="og:type" content="image/jpeg" />
    <meta property="og:image:width" content="2160" />
    <meta property="og:image:height" content="1080" />

    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:site" content="@joshrehders" />
    <meta name="twitter:creator" content="@joshrehders" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={share_image} />
    <meta name="twitter:image:alt" content="Cindercinthesis is a concert and sports photographer based in New York City." />

    {(prod || dev) && <GA />}
  </head>

  <body class="bg-slate-100 text-neutral-900 dark:bg-neutral-900 dark:text-slate-100">
    <slot />
    <div class="corner-logo" aria-hidden="true" set:html={logoMarkup}></div>
  </body>
</html>

<style is:global>
  @font-face {
    font-family: "Open Sans";
    src: url("/fonts/subset-OpenSans-Regular.woff2") format("woff2");
    font-style: normal;
    font-weight: 400;
    font-display: optional;
    unicode-range: U+0000-00FF, U+0131, U+0152-0153, U+02BB-02BC, U+02C6, U+02DA, U+02DC, U+2000-206F, U+2074, U+20AC, U+2122, U+2191, U+2193, U+2212, U+2215, U+FEFF, U+FFFD;
  }

  @font-face {
    font-family: "Open Sans";
    src: url("/fonts/subset-OpenSans-Medium.woff2") format("woff2");
    font-style: normal;
    font-weight: 500;
    font-display: optional;
    unicode-range: U+0000-00FF, U+0131, U+0152-0153, U+02BB-02BC, U+02C6, U+02DA, U+02DC, U+2000-206F, U+2074, U+20AC, U+2122, U+2191, U+2193, U+2212, U+2215, U+FEFF, U+FFFD;
  }

  @font-face {
    font-family: "Open Sans";
    src: url("/fonts/subset-OpenSans-SemiBold.woff2") format("woff2");
    font-style: normal;
    font-weight: 600;
    font-display: optional;
    unicode-range: U+0000-00FF, U+0131, U+0152-0153, U+02BB-02BC, U+02C6, U+02DA, U+02DC, U+2000-206F, U+2074, U+20AC, U+2122, U+2191, U+2193, U+2212, U+2215, U+FEFF, U+FFFD;
  }

  @font-face {
    font-family: "Open Sans";
    src: url("/fonts/subset-OpenSans-Bold.woff2") format("woff2");
    font-style: normal;
    font-weight: 700;
    font-display: optional;
    unicode-range: U+0000-00FF, U+0131, U+0152-0153, U+02BB-02BC, U+02C6, U+02DA, U+02DC, U+2000-206F, U+2074, U+20AC, U+2122, U+2191, U+2193, U+2212, U+2215, U+FEFF, U+FFFD;
  }

  @font-face {
    font-family: "Open Sans";
    src: url("/fonts/subset-OpenSans-ExtraBold.woff2") format("woff2");
    font-style: normal;
    font-weight: 800;
    font-display: optional;
    unicode-range: U+0000-00FF, U+0131, U+0152-0153, U+02BB-02BC, U+02C6, U+02DA, U+02DC, U+2000-206F, U+2074, U+20AC, U+2122, U+2191, U+2193, U+2212, U+2215, U+FEFF, U+FFFD;
  }

  @font-face {
    font-family: "Open Sans";
    src: url("/fonts/subset-OpenSans-Italic.woff2") format("woff2");
    font-style: italic;
    font-weight: 400;
    font-display: optional;
    unicode-range: U+0000-00FF, U+0131, U+0152-0153, U+02BB-02BC, U+02C6, U+02DA, U+02DC, U+2000-206F, U+2074, U+20AC, U+2122, U+2191, U+2193, U+2212, U+2215, U+FEFF, U+FFFD;
  }

  @font-face {
    font-family: "Open Sans";
    src: url("/fonts/subset-OpenSans-MediumItalic.woff2") format("woff2");
    font-style: italic;
    font-weight: 500;
    font-display: optional;
    unicode-range: U+0000-00FF, U+0131, U+0152-0153, U+02BB-02BC, U+02C6, U+02DA, U+02DC, U+2000-206F, U+2074, U+20AC, U+2122, U+2191, U+2193, U+2212, U+2215, U+FEFF, U+FFFD;
  }

  .about-container {
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 20px;
    background-color: rgb(23, 23, 23);
    color: #ffffff;
    font-family: "proxima-nova", sans-serif;
  }

  .about-container div {
    max-width: 800px;
    margin: 0 auto;
  }

  .about-container div a {
    color: #9395cc;
    text-decoration: none;
    font-weight: 300;
  }

  .about-container div a:hover {
    color: #505050; /* Adjust color to match the hover state */
  }

  .about-container div span {
    font-size: 20px;
  }

  .about-container div span a {
    color: #9395cc;
    text-decoration: none;
    font-weight: 300;
  }

  .about-container div span a:hover {
    color: #505050; /* Adjust color to match the hover state */
  }

  .about-container div p {
    font-size: 16px;
    line-height: 1.5;
    margin-bottom: 20px;
  }

  .about-container div p.client-list {
    color: #aaa;
  }

  ::-webkit-scrollbar {
    @apply w-4;
  }

  ::-webkit-scrollbar-track {
    @apply bg-slate-100 dark:bg-neutral-900;
  }

  ::-webkit-scrollbar-thumb {
    @apply rounded-full border-4 border-solid border-slate-100 bg-neutral-400 opacity-50 dark:border-neutral-900 dark:bg-neutral-600;
  }

  .text-xs {
    font-size: 0.75rem;
    font-family: "proxima-nova", sans-serif;
  }

  .header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 20px;
    background-color: rgb(23, 23, 23);
    color: #ffffff;
    font-family: "proxima-nova", sans-serif;
  }

  .header-left h1 {
    font-size: 20px;
    margin: 0;
    margin-bottom: -4px;
    font-weight: 600;
  }

  .header-left p {
    font-size: 20px;
    color: #8b8b8b;
  }

  .header-left a {
    color: #8b8b8b;
    text-decoration: none;
    font-weight: 300;
  }

  .header-left a:hover {
    color: #505050; /* Adjust color to match the hover state */
  }

  .header-left .header-home {
    color: inherit;
    text-decoration: none;
    font-weight: 600;
  }

  .header-left .header-home:hover {
    color: #ffffff;
  }

  .header-left .header-home:focus-visible {
    color: #ffffff;
    outline: 2px solid rgba(255, 255, 255, 0.6);
    outline-offset: 3px;
  }

  .header-nav {
    display: flex;
    align-items: center;
  }

  .header-link {
    color: #8b8b8b;
    margin-right: 1rem;
    text-decoration: none;
    font-size: 14px;
    font-weight: 600;
  }

  .header-link:hover {
    color: #fff; /* Adjust color to match the hover state */
  }

  .header-link-active {
    margin-right: 1rem;
    text-decoration: none;
    font-size: 14px;
    font-weight: 600;
    color: #9395cc;
  }

  .header-icons {
    display: flex;
    align-items: center;
  }

  .header-icon {
    margin-left: 10px;
    fill: #8b8b8b;
    font-size: 18px;
  }

  .header-icon:hover {
    fill: #fff; /* Adjust color to match the hover state */
  }

  /* Media query for smaller screens */
  @media (max-width: 768px) {
    .header {
      flex-direction: column;
      align-items: flex-start;
    }

    .header-nav {
      width: 100%;
      margin-top: 1rem;
      flex-direction: row;
    }

    .header-link {
      margin-right: 0.5rem;
    }

    .header-link-active {
      margin-right: 0.5rem;
    }

    .header-icons {
      display: none !important;
    }
  }

  .corner-logo {
    position: fixed;
    right: 1.5rem;
    bottom: 1.5rem;
    width: 64px;
    height: 64px;
    opacity: 0.7;
    color: #111111;
    pointer-events: none;
    z-index: 1;
  }

  .corner-logo svg {
    display: block;
    width: 100%;
    height: 100%;
  }

  .corner-logo svg g {
    stroke: currentColor;
  }

  .corner-logo svg circle {
    fill: currentColor;
  }

  @media (max-width: 640px) {
    .corner-logo {
      right: 1rem;
      bottom: 1rem;
      width: 48px;
      height: 48px;
      opacity: 0.6;
    }
  }
</style>
