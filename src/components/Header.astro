---
import SocialIcons from "./SocialIcons.astro";

export interface Props {
  showSocials?: boolean;
}

const menuItems = [
  { name: "Home", href: "/" },
  { name: "Photography", href: "/photography/" },
  { name: "Writing", href: "/writing/" },
  { name: "Music", href: "/music/" },
  // { name: "About", href: "/about/" }, // disabled for now; uncomment to restore
];

const showSocials = Astro.props.showSocials ?? true;
---

<header class="header">
  <div class="header-left">
    <h1>I often wonder what it means to exist</h1>
    <!-- <h1 style={{ marginTop: "-6px" }}>NEW YORK CITY & BEYOND</h1>
    <p><a href="mailto:josh@rehders.photos">JOSH@REHDERS.PHOTOS</a></p> -->
  </div>
  <nav class="header-nav">
    {
      menuItems.map((item) => (
        <a href={item.href} class={`header-link${item.href === Astro.url.pathname ? "-active" : ""}`}>
          {item.name}
        </a>
      ))
    }
    {/*
      {showSocials && <SocialIcons />}
      Social icons are hidden for now; uncomment to restore.
    */}
  </nav>
</header>
