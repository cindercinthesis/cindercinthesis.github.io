---
import SocialIcons from "./SocialIcons.astro";

export interface Props {
  showSocials?: boolean;
}

const menuItems = [
  { name: "Home", href: "/" },
  { name: "Photography", href: "/photography/" },
  { name: "Writing", href: "/writing/" },
  { name: "Music", href: "/music/" },
  { name: "Drawing", href: "/drawing/" },
  // { name: "About", href: "/about/" }, // disabled for now; uncomment to restore
];

const showSocials = Astro.props.showSocials ?? true;
---

<header class="header">
  <div class="header-left">
    <h1>
      <a class="header-home" href="/home/">Cindercinthesis</a>
    </h1>
  </div>
  <nav class="header-nav">
    {
      menuItems.map((item) => {
        const isHome = item.href === "/";
        const isActive = isHome ? ["/", "/home/"].includes(Astro.url.pathname) : Astro.url.pathname.startsWith(item.href);
        return (
          <a href={item.href} class={`header-link${isActive ? "-active" : ""}`}>
            {item.name}
          </a>
        );
      })
    }
    {/*
      {showSocials && <SocialIcons />}
      Social icons are hidden for now; uncomment to restore.
    */}
  </nav>
</header>
