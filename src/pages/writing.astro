---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import Gallery from "../components/Gallery.astro";
---

<Layout title="I often wonder what it means to exist — Writing" description="Words collected here.">
  <main class="page-shell">
    <Header />

    <section class="hero">
      <p class="eyebrow">Writing</p>
      <h2>Fragments, letters, and notes on existing.</h2>
      <p class="lede">A quieter corner—wander through the words.</p>
    </section>

    <section class="content">
      <Gallery folder="sports" />
    </section>
  </main>
</Layout>

<style>
  :global(body) {
    background: radial-gradient(circle at 10% 20%, #f9f1e6 0%, #f5ecdf 35%, #f2e7d7 60%, #efe2cf 100%);
    color: #1c1a17;
    font-family: "Cormorant Garamond", "Iowan Old Style", Georgia, serif;
    letter-spacing: 0.01em;
  }

  .page-shell {
    max-width: 1100px;
    margin: 0 auto;
    padding: 3rem 1.5rem 4.5rem;
  }

  .hero {
    margin-top: 2rem;
    display: grid;
    gap: 1.1rem;
  }

  .eyebrow {
    letter-spacing: 0.14em;
    text-transform: uppercase;
    font-size: 0.85rem;
    color: #7b6a55;
    margin: 0;
  }

  .hero h2 {
    font-size: clamp(2.3rem, 5vw, 3.2rem);
    line-height: 1.08;
    margin: 0;
    color: #1c1a17;
  }

  .lede {
    font-family: "Neue Haas Grotesk", "Helvetica Neue", Arial, sans-serif;
    font-size: 1.05rem;
    line-height: 1.8;
    max-width: 680px;
    color: #3a362f;
    margin: 0;
  }

  .content {
    margin-top: 2rem;
  }

  @media (max-width: 640px) {
    .page-shell {
      padding: 2.3rem 1.1rem 3.5rem;
    }

    .hero {
      margin-top: 1.3rem;
    }
  }
</style>
