<Layout title="Cindercinthesis - Writing" description="Words and winds.">
  <main class="writing-shell">
    <div class="header-shell">
      <Header />
    </div>

    <input id="map-toggle" class="map-toggle" type="checkbox" aria-hidden="true" />
    <input id="category-toggle" class="category-toggle" type="checkbox" aria-hidden="true" />
    <label for="map-toggle" class="edge-button edge-button-map">
      <span class="edge-button-label">Map</span>
    </label>
    <label for="category-toggle" class="edge-button edge-button-category">
      <span class="edge-button-label">Categories</span>
    </label>

    <div class="writing-frame">
      <aside class="map-panel" aria-label="Writing map">
        <div class="map-panel-inner">
          <div class="map-panel-title">Map</div>
          <p class="map-panel-subtitle">Browse the archive by category.</p>
          {
            categories.length ? (
              categories.map((category) => (
                <details class="map-group">
                  <summary>
                    <span class="map-group-name">{category.label}</span>
                    <span class="map-group-count">{category.count}</span>
                  </summary>
                  <ul>
                    {category.posts.map((post) => (
                      <li>
                        <a href={`/writing/${post.slug}/`}>
                          <span class="map-post-title">{post.data.title}</span>
                          <span class="map-post-date">{formatMonthYear(post.data.date)}</span>
                        </a>
                      </li>
                    ))}
                  </ul>
                </details>
              ))
            ) : (
              <p class="map-panel-empty">No writing entries yet.</p>
            )
          }
        </div>
      </aside>

      <div class="writing-content">
        <div class="writing-inner">
          <div class="map-controls">
            <div class="filter-status" aria-live="polite">
              <span class="filter-label">Showing</span>
              <span class="filter-active" data-active-label>All</span>
              <span class="filter-divider">/</span>
              <span class="filter-count"><span data-active-count>{totalPosts}</span> posts</span>
            </div>
          </div>

          <section class="hero">
            <p class="eyebrow">Writing</p>
            <h2>Till the dawn breaks</h2>
            <p class="lede">Some write to remember, some write to forget</p>
          </section>

          <section class="writing-grid">
            <div class="post-feed">
              {posts.length ? (
                posts.map((post, index) => {
                  const displayCategories = post.data.categories.map(formatCategory);
                  const categoryData = post.data.categories.map((category) => category.trim());
                  const postImage = post.data.image;
                  const postImageAlt = post.data.imageAlt ?? post.data.title;
                  return (
                    <article
                      class={`post-card${postImage ? " has-image" : ""}`}
                      data-post
                      data-categories={JSON.stringify(categoryData)}
                      style={`--delay: ${index * 80}ms;`}
                    >
                      <div class="post-body">
                        <div class="post-meta">
                          <time datetime={post.data.date.toISOString()}>{formatDate(post.data.date)}</time>
                          <span class="meta-divider">âš†</span>
                          <span class="meta-categories">{displayCategories.join(" | ")}</span>
                        </div>
                        <h3 class="post-title">
                          <a href={`/writing/${post.slug}/`}>{post.data.title}</a>
                        </h3>
                        {post.data.description && <p class="post-description">{post.data.description}</p>}
                      </div>
                      {postImage && (
                        <a class="post-image" href={`/writing/${post.slug}/`}>
                          <img src={postImage} alt={postImageAlt} loading={index <= 1 ? "eager" : "lazy"} decoding="async" />
                        </a>
                      )}
                    </article>
                  );
                })
              ) : (
                <div class="empty-state">
                  <h3>No writing yet.</h3>
                  <p>Add entries to <code>src/content/writing</code> to see them here.</p>
                </div>
              )}
            </div>

            <aside class="category-panel" aria-label="Category filters">
              <div class="panel-title">Categories</div>
              <p class="panel-subtitle">Filter the archive.</p>
              {categories.length ? (
                <ul class="category-list">
                  <li>
                    <button type="button" class="category-button is-active" data-filter="all" data-label="All" aria-pressed="true">
                      <span>All</span>
                      <span class="category-count">{totalPosts}</span>
                    </button>
                  </li>
                  {categories.map((category, index) => (
                    <li style={`--delay: ${index * 60 + 120}ms;`}>
                      <button type="button" class="category-button" data-filter={category.name} data-label={category.label} aria-pressed="false">
                        <span>{category.label}</span>
                        <span class="category-count">{category.count}</span>
                      </button>
                    </li>
                  ))}
                </ul>
              ) : (
                <p class="panel-empty">No categories yet.</p>
              )}
            </aside>
          </section>
        </div>
      </div>
    </div>
  </main>
</Layout>

<script is:inline>
  const filterButtons = Array.from(document.querySelectorAll("[data-filter]"));
  const posts = Array.from(document.querySelectorAll("[data-post]"));
  const activeLabel = document.querySelector("[data-active-label]");
  const activeCount = document.querySelector("[data-active-count]");

  const getPostCategories = (post) => {
    try {
      return JSON.parse(post.dataset.categories || "[]");
    } catch (error) {
      return [];
    }
  };

  const applyFilter = (filter) => {
    let visibleCount = 0;
    let activeLabelText = "All";

    filterButtons.forEach((button) => {
      const isActive = button.dataset.filter === filter;
      button.classList.toggle("is-active", isActive);
      button.setAttribute("aria-pressed", isActive ? "true" : "false");
      if (isActive) {
        activeLabelText = button.dataset.label || button.textContent || filter;
      }
    });

    posts.forEach((post) => {
      const categories = getPostCategories(post);
      const matches = filter === "all" || categories.includes(filter);
      post.hidden = !matches;
      post.classList.toggle("is-hidden", !matches);
      if (matches) visibleCount += 1;
    });

    if (activeLabel) {
      activeLabel.textContent = activeLabelText;
    }
    if (activeCount) {
      activeCount.textContent = String(visibleCount);
    }
  };

  if (filterButtons.length) {
    filterButtons.forEach((button) => {
      button.addEventListener("click", () => {
        const filter = button.dataset.filter || "all";
        applyFilter(filter);
      });
    });

    applyFilter("all");
  }

  const mapToggle = document.getElementById("map-toggle");
  const categoryToggle = document.getElementById("category-toggle");
  const interactiveSelector = "a, button, summary, input, select, textarea, label";
  const panelSelector = ".map-panel, .category-panel, .edge-button";

  document.addEventListener("click", (event) => {
    if (!mapToggle?.checked && !categoryToggle?.checked) return;
    const target = event.target;
    if (!(target instanceof Element)) return;
    if (target.closest(panelSelector)) return;
    if (target.closest(interactiveSelector)) return;
    mapToggle.checked = false;
    categoryToggle.checked = false;
  });
</script>

