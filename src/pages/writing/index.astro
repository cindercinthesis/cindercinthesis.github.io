import Layout from "../../layouts/Layout.astro";
import Header from "../../components/Header.astro";
import { getCollection } from "astro:content";

const entries = await getCollection("writing");
const posts = entries
  .filter((post) => !post.data.draft)
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());

const formatCategory = (category: string) => {
  const normalized = category.trim().toLowerCase();
  if (!normalized) return "";
  return normalized[0].toUpperCase() + normalized.slice(1);
};

const categoryMap = new Map<string, typeof posts>();

for (const post of posts) {
  for (const rawCategory of post.data.categories) {
    const category = rawCategory.trim();
    if (!category) continue;
    const group = categoryMap.get(category) ?? [];
    group.push(post);
    categoryMap.set(category, group);
  }
}

const categories = Array.from(categoryMap.entries())
  .map(([name, items]) => ({
    name,
    label: formatCategory(name),
    count: items.length,
    posts: [...items].sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf()),
  }))
  .sort((a, b) => a.label.localeCompare(b.label));

const totalPosts = posts.length;

const formatDate = (date: Date) =>
  date.toLocaleDateString("en-US", {
    year: "numeric",
    month: "short",
    day: "numeric",
    timeZone: "UTC",
  });

const formatMonthYear = (date: Date) =>
  date.toLocaleDateString("en-US", {
    year: "numeric",
    month: "short",
    timeZone: "UTC",
  });
