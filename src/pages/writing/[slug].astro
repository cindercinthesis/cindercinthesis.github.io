---
import Layout from "../../layouts/Layout.astro";
import Header from "../../components/Header.astro";
import { getCollection } from "astro:content";

export async function getStaticPaths() {
  const entries = await getCollection("writing");
  return entries
    .filter((post) => !post.data.draft)
    .map((post) => ({
      params: { slug: post.slug },
      props: { post },
    }));
}

const { post } = Astro.props;
const { Content } = await post.render();

const entries = await getCollection("writing");
const posts = entries.filter((entry) => !entry.data.draft).sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());

const formatCategory = (category: string) => {
  const normalized = category.trim().toLowerCase();
  if (!normalized) return "";
  return normalized[0].toUpperCase() + normalized.slice(1);
};

const categoryMap = new Map<string, typeof posts>();

for (const entry of posts) {
  for (const rawCategory of entry.data.categories) {
    const category = rawCategory.trim();
    if (!category) continue;
    const group = categoryMap.get(category) ?? [];
    group.push(entry);
    categoryMap.set(category, group);
  }
}

const categories = Array.from(categoryMap.entries())
  .map(([name, items]) => ({
    name,
    label: formatCategory(name),
    count: items.length,
    posts: [...items].sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf()),
  }))
  .sort((a, b) => a.label.localeCompare(b.label));

const formatDate = (date: Date) =>
  date.toLocaleDateString("en-US", {
    year: "numeric",
    month: "short",
    day: "numeric",
    timeZone: "UTC",
  });

const formatMonthYear = (date: Date) =>
  date.toLocaleDateString("en-US", {
    year: "numeric",
    month: "short",
    timeZone: "UTC",
  });
---

<Layout title={`${post.data.title} - Writing`} description={post.data.description ?? "Writing entry."}>
  <main class="writing-shell">
    <div class="header-shell">
      <Header />
    </div>

    <input id="map-toggle" class="map-toggle" type="checkbox" aria-hidden="true" />

    <div class="writing-frame">
      <aside class="map-panel" aria-label="Writing map">
        <div class="map-panel-inner">
          <div class="map-panel-title">Map</div>
          <p class="map-panel-subtitle">Browse the archive by category.</p>
          {
            categories.length ? (
              categories.map((category) => (
                <details class="map-group">
                  <summary>
                    <span class="map-group-name">{category.label}</span>
                    <span class="map-group-count">{category.count}</span>
                  </summary>
                  <ul>
                    {category.posts.map((entry) => (
                      <li>
                        <a
                          href={`/writing/${entry.slug}/`}
                          class={entry.slug === post.slug ? "map-post-current" : undefined}
                          aria-current={entry.slug === post.slug ? "page" : undefined}
                        >
                          <span class="map-post-title">{entry.data.title}</span>
                          <span class="map-post-date">{formatMonthYear(entry.data.date)}</span>
                        </a>
                      </li>
                    ))}
                  </ul>
                </details>
              ))
            ) : (
              <p class="map-panel-empty">No writing entries yet.</p>
            )
          }
        </div>
      </aside>

      <div class="writing-content">
        <div class="writing-inner">
          <div class="map-controls">
            <a class="back-link" href="/writing/">Back to writing</a>
          </div>

          <article class="post-article">
            <header class="post-header">
              <p class="eyebrow">Writing</p>
              <h1>{post.data.title}</h1>
              <div class="post-meta">
                <time datetime={post.data.date.toISOString()}>{formatDate(post.data.date)}</time>
                <span class="meta-divider">âš†</span>
                <span>{post.data.categories.map(formatCategory).join(" | ")}</span>
              </div>
            </header>

            <div class="post-content">
              <Content />
            </div>
          </article>
        </div>
      </div>
    </div>
  </main>
</Layout>

<style>
  :global(body) {
    --ink: #1c1a17;
    --ink-soft: #3f3932;
    --ink-fade: #6a5f54;
    --paper: #f9f1e6;
    --paper-strong: #efe2cf;
    --accent: #c28d5c;
    --accent-strong: #a46f45;
    --panel-width: clamp(220px, 22vw, 320px);
    --edge-button-length: clamp(220px, 34vh, 320px);
    --edge-button-width: 48px;
    --edge-button-color: #4b2d1a;
    background-image: radial-gradient(circle at 15% 15%, #f9f1e6 0%, #f5ecdf 42%, #efe2cf 72%, #e7d8c1 100%),
      linear-gradient(120deg, rgba(255, 255, 255, 0.45), rgba(255, 255, 255, 0));
    background-attachment: fixed;
    color: var(--ink);
    font-family: "Cormorant Garamond", "Iowan Old Style", Georgia, serif;
    letter-spacing: 0.01em;
  }

  .writing-shell {
    padding: 2.5rem 0 4.5rem;
    position: relative;
  }

  .header-shell {
    max-width: 1100px;
    margin: 0 auto;
    padding: 0 1.5rem;
  }

  :global(.header) {
    position: relative;
    background: rgb(23, 23, 23);
    overflow: visible;
    --header-edge: calc((100vw - 100%) / 2);
  }

  :global(.header)::before,
  :global(.header)::after {
    content: "";
    position: absolute;
    top: 0;
    bottom: 0;
    width: var(--header-edge);
    background: rgb(23, 23, 23);
    pointer-events: none;
  }

  :global(.header)::before {
    left: calc(0px - var(--header-edge));
    clip-path: polygon(100% 0, 0 50%, 100% 100%);
  }

  :global(.header)::after {
    right: calc(0px - var(--header-edge));
    clip-path: polygon(0 0, 100% 50%, 0 100%);
  }

  .writing-frame {
    display: block;
    position: relative;
    overflow-x: hidden;
    overflow-y: visible;
  }

  .map-toggle {
    position: fixed;
    top: 0;
    left: 0;
    width: 1px;
    height: 1px;
    opacity: 0;
    pointer-events: none;
  }

  .edge-button {
    position: fixed;
    top: clamp(120px, 18vh, 220px);
    z-index: 6;
    height: var(--edge-button-length);
    width: var(--edge-button-width);
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 0;
    border: 1px solid rgba(28, 26, 23, 0.2);
    border-radius: 999px 0 0 999px;
    background: rgba(249, 241, 230, 0.95);
    box-shadow: 0 12px 24px rgba(28, 26, 23, 0.12);
    font-family: "Neue Haas Grotesk", "Helvetica Neue", Arial, sans-serif;
    font-size: 0.72rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.22em;
    color: var(--edge-button-color);
    cursor: pointer;
    writing-mode: vertical-rl;
    text-orientation: mixed;
    transition: transform 160ms ease, box-shadow 160ms ease, background 160ms ease, border-color 160ms ease;
  }

  .edge-button:hover,
  .edge-button:focus-visible {
    border-color: rgba(28, 26, 23, 0.35);
    background: #ffffff;
    box-shadow: 0 16px 30px rgba(28, 26, 23, 0.16);
    outline: none;
  }

  .edge-button-map {
    left: 0;
    border-radius: 0 999px 999px 0;
  }

  .map-toggle:checked ~ .edge-button-map {
    border-color: rgba(194, 141, 92, 0.5);
    background: rgba(194, 141, 92, 0.18);
  }


  .map-panel {
    position: fixed;
    top: 0;
    left: 0;
    height: 100vh;
    width: var(--panel-width);
    z-index: 5;
    transform: translateX(-110%);
    opacity: 0;
    pointer-events: none;
    transition: transform 260ms ease, opacity 260ms ease;
  }

  .map-toggle:checked ~ .writing-frame .map-panel {
    transform: translateX(0);
    opacity: 1;
    pointer-events: auto;
  }

  .map-panel-inner {
    height: 100%;
    overflow-y: auto;
    padding: 1.5rem 1.2rem 2rem;
    border-right: 1px solid rgba(28, 26, 23, 0.08);
    border-radius: 0 18px 18px 0;
    background: rgba(252, 248, 243, 0.95);
    box-shadow: 12px 0 30px rgba(0, 0, 0, 0.08);
  }

  .map-panel-title {
    font-size: 1.1rem;
    letter-spacing: 0.14em;
    text-transform: uppercase;
    margin-bottom: 0.25rem;
    color: var(--ink);
  }

  .map-panel-subtitle {
    font-family: "Neue Haas Grotesk", "Helvetica Neue", Arial, sans-serif;
    font-size: 0.95rem;
    color: var(--ink-fade);
    margin: 0 0 1.4rem;
  }

  .map-panel-empty {
    font-family: "Neue Haas Grotesk", "Helvetica Neue", Arial, sans-serif;
    color: var(--ink-fade);
  }

  .map-group {
    border-bottom: 1px solid rgba(28, 26, 23, 0.08);
    padding-bottom: 0.9rem;
    margin-bottom: 0.9rem;
  }

  .map-group summary {
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 0.5rem;
    list-style: none;
    font-family: "Neue Haas Grotesk", "Helvetica Neue", Arial, sans-serif;
    font-size: 0.95rem;
    letter-spacing: 0.08em;
    color: var(--ink);
  }

  .map-group summary::-webkit-details-marker {
    display: none;
  }

  .map-group-name {
    font-weight: 600;
  }

  .map-group-count {
    font-size: 0.75rem;
    font-weight: 600;
    padding: 0.15rem 0.5rem;
    border-radius: 999px;
    background: rgba(194, 141, 92, 0.2);
    color: var(--accent-strong);
  }

  .map-group ul {
    list-style: none;
    margin: 0.7rem 0 0;
    padding: 0;
    display: grid;
    gap: 0.55rem;
  }

  .map-group a {
    display: flex;
    justify-content: space-between;
    gap: 0.75rem;
    text-decoration: none;
    color: var(--ink-soft);
    font-family: "Neue Haas Grotesk", "Helvetica Neue", Arial, sans-serif;
    font-size: 0.95rem;
    border-radius: 10px;
    padding: 0.25rem 0.4rem;
    transition: background 160ms ease, color 160ms ease;
  }

  .map-group a:hover,
  .map-group a:focus-visible {
    background: rgba(194, 141, 92, 0.15);
    color: var(--ink);
    outline: none;
  }

  .map-post-current {
    background: rgba(194, 141, 92, 0.18);
    color: var(--ink);
  }

  .map-post-title {
    font-weight: 500;
  }

  .map-post-date {
    color: var(--ink-fade);
    font-size: 0.85rem;
    white-space: nowrap;
  }

  .writing-content {
    width: 100%;
  }

  .writing-inner {
    max-width: 1100px;
    margin: 0 auto;
    padding: 0 1.5rem 2rem;
  }

  .map-controls {
    display: flex;
    justify-content: flex-start;
    align-items: center;
    gap: 1rem;
    margin-bottom: 2rem;
  }

  .back-link {
    font-family: "Neue Haas Grotesk", "Helvetica Neue", Arial, sans-serif;
    font-size: 0.95rem;
    color: var(--ink-soft);
    text-decoration: none;
    border-bottom: 1px solid rgba(28, 26, 23, 0.2);
    padding-bottom: 0.1rem;
  }

  .back-link:hover,
  .back-link:focus-visible {
    color: var(--accent-strong);
    border-color: rgba(164, 111, 69, 0.6);
    outline: none;
  }

  .eyebrow {
    letter-spacing: 0.14em;
    text-transform: uppercase;
    font-size: 0.85rem;
    color: var(--ink-fade);
    margin: 0 0 0.6rem;
  }

  .post-header h1 {
    font-size: clamp(2.4rem, 5vw, 3.4rem);
    line-height: 1.05;
    margin: 0 0 0.8rem;
    color: var(--ink);
  }

  .post-meta {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    font-family: "Neue Haas Grotesk", "Helvetica Neue", Arial, sans-serif;
    font-size: 0.85rem;
    letter-spacing: 0.08em;
    color: var(--ink-fade);
  }

  .meta-divider {
    opacity: 0.6;
  }

  .post-summary {
    font-family: "Neue Haas Grotesk", "Helvetica Neue", Arial, sans-serif;
    font-size: 1.05rem;
    color: var(--ink-soft);
    margin: 1.2rem 0 0;
    line-height: 1.7;
  }

  .post-content {
    margin-top: 2.5rem;
    font-family: "Neue Haas Grotesk", "Helvetica Neue", Arial, sans-serif;
    font-size: 1.05rem;
    line-height: 1.8;
    color: var(--ink-soft);
  }

  .post-content :global(h2),
  .post-content :global(h3) {
    font-family: "Cormorant Garamond", "Iowan Old Style", Georgia, serif;
    color: var(--ink);
    margin-top: 2.4rem;
    margin-bottom: 0.8rem;
  }

  .post-content :global(a) {
    color: var(--accent-strong);
    text-decoration: none;
    border-bottom: 1px solid rgba(164, 111, 69, 0.4);
  }

  .post-content :global(a:hover),
  .post-content :global(a:focus-visible) {
    color: var(--ink);
    border-color: rgba(28, 26, 23, 0.4);
    outline: none;
  }

  .post-content :global(blockquote) {
    border-left: 3px solid rgba(194, 141, 92, 0.5);
    margin: 1.5rem 0;
    padding-left: 1.2rem;
    color: var(--ink);
    font-style: italic;
  }

  .post-content :global(ul),
  .post-content :global(ol) {
    padding-left: 1.4rem;
  }

  @media (max-width: 900px) {
    .map-controls {
      flex-direction: column;
      align-items: flex-start;
    }
  }

  @media (max-width: 720px) {
    :global(body) {
      --panel-width: 100vw;
    }

    .writing-shell {
      padding: 2.2rem 0 3.8rem;
    }

    .map-panel {
      width: var(--panel-width);
      transform: translateX(-110%);
    }

    .map-panel-inner {
      border-right: none;
      border-radius: 0;
      border-bottom: 1px solid rgba(28, 26, 23, 0.08);
    }

    .edge-button {
      top: auto;
      bottom: 1.2rem;
      writing-mode: horizontal-tb;
      text-orientation: mixed;
      height: auto;
      width: auto;
      padding: 0.55rem 1.1rem;
      letter-spacing: 0.12em;
      border-radius: 999px;
    }

    .edge-button-map {
      left: 1rem;
    }
  }

  @media (max-width: 640px) {
    .header-shell {
      padding: 0 1.1rem;
    }

    .writing-inner {
      padding: 0 1.1rem 2rem;
    }
  }

  @media (prefers-reduced-motion: reduce) {
    .map-panel,
    .writing-frame {
      transition: none;
    }
  }
</style>
